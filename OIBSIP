import java.util.Scanner;

public class ATM {
    private static Scanner scanner = new Scanner(System.in);
    private static int userId = 12345; // Example user ID
    private static int userPin = 6789; // Example user PIN
    private static double balance = 1000; // Example initial balance

    public static void main(String[] args) {
        System.out.println("Welcome to the ATM!");

        // Prompt user for ID and PIN
        System.out.print("Enter User ID: ");
        int enteredId = scanner.nextInt();
        System.out.print("Enter PIN: ");
        int enteredPin = scanner.nextInt();

        // Check if ID and PIN are correct
        if (enteredId == userId && enteredPin == userPin) {
            System.out.println("Login successful!");
            displayMenu();
        } else {
            System.out.println("Incorrect ID or PIN. Exiting...");
        }
    }

    private static void displayMenu() {
        while (true) {
            System.out.println("\nChoose an option:");
            System.out.println("1. Check Balance");
            System.out.println("2. Withdraw");
            System.out.println("3. Deposit");
            System.out.println("4. Transfer");
            System.out.println("5. Quit");

            int choice = scanner.nextInt();
            switch (choice) {
                case 1:
                    checkBalance();
                    break;
                case 2:
                    withdraw();
                    break;
                case 3:
                    deposit();
                    break;
                case 4:
                    transfer();
                    break;
                case 5:
                    System.out.println("Thank you for using the ATM. Goodbye!");
                    return;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
    }

    private static void checkBalance() {
        System.out.println("Your balance is: R" + balance);
    }

    private static void withdraw() {
        System.out.print("Enter amount to withdraw: R");
        double amount = scanner.nextDouble();
        if (amount > balance) {
            System.out.println("Insufficient funds!");
        } else {
            balance -= amount;
            System.out.println("Withdrawal successful. Your new balance is: R" + balance);
        }
    }

    private static void deposit() {
        System.out.print("Enter amount to deposit: R");
        double amount = scanner.nextDouble();
        balance += amount;
        System.out.println("Deposit successful. Your new balance is: R" + balance);
    }

    private static void transfer() {
        System.out.print("Enter recipient's account number: ");
        String recipientAccount = scanner.next();
        System.out.print("Enter amount to transfer: R");
        double amount = scanner.nextDouble();
        // Logic for transferring amount to recipient's account
        System.out.println("Transfer complete.");
    }
}

            
